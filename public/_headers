# Security headers for Cloudflare Pages
/*
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: geolocation=(), microphone=(), camera=(), payment=()
  X-XSS-Protection: 1; mode=block
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://*.supabase.co https://*.cloudflare.com https://static.cloudflareinsights.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://fonts.gstatic.com; font-src 'self' https://fonts.googleapis.com https://fonts.gstatic.com data:; img-src 'self' data: https: blob:; connect-src 'self' https://*.supabase.co wss://*.supabase.co https://*.cloudflare.com https://static.cloudflareinsights.com https://generativelanguage.googleapis.com; frame-src 'self' https://*.supabase.co; worker-src 'self' blob:; manifest-src 'self'; base-uri 'self'; form-action 'self'; object-src 'none'; media-src 'self' blob:; upgrade-insecure-requests
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload
  X-DNS-Prefetch-Control: on

# Cache static assets (hashed files - immutable) - 1 year
/assets/*
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

# Cache JavaScript bundles - 1 year (hashed filenames)
/assets/js/*
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

# Cache CSS bundles - 1 year (hashed filenames)
/assets/css/*
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

# Cache images - 1 year
/assets/images/*
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

# Cache fonts - 1 year
/assets/fonts/*
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

# Don't cache HTML (always fresh) - critical for SPA updates
/*.html
  Cache-Control: no-cache, no-store, must-revalidate, max-age=0
  Pragma: no-cache
  Expires: 0
  X-Content-Type-Options: nosniff

# Service worker - no cache (must always check for updates)
/sw.js
  Cache-Control: no-cache, no-store, must-revalidate, max-age=0
  Pragma: no-cache
  Expires: 0
  Service-Worker-Allowed: /

# Manifest - short cache (1 hour)
/manifest.webmanifest
  Cache-Control: public, max-age=3600, must-revalidate
  X-Content-Type-Options: nosniff

# Icons - long cache (1 year)
/icons/*
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff# Favicon - long cache
/favicon.ico
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff